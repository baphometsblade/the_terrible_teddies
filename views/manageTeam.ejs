<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/_head.ejs') %>
  <title>Manage Team - Terrible Teddies</title>
</head>
<body>
  <%- include('partials/_nav.ejs') %>
  <div class="container">
    <h1>Manage Your Team</h1>
    <form action="/teams/<%= team._id %>/addMember" method="POST">
      <div class="form-group">
        <label for="memberId">Add Member:</label>
        <input type="text" id="memberId" name="memberId" required class="form-control">
        <small class="form-text text-muted">Enter the ID of the member you wish to add.</small>
      </div>
      <button type="submit" class="btn btn-primary">Add Member</button>
    </form>
    <hr>
    <h2>Current Team Members</h2>
    <ul id="teamMembersList">
      <% if (team && team.members) { %>
        <% team.members.forEach(function(member){ %>
          <li><%= member.username %> - <%= member._id %></li>
        <% }); %>
      <% } else { %>
        <li>No members found.</li>
      <% } %>
    </ul>
  </div>
  <%- include('partials/_footer.ejs') %>
  <script src="/js/main.js"></script>
</body>
</html>