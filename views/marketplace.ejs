<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
  <%- include('partials/_header.ejs') %>
  <main role="main" class="container mt-4">
    <h1>Marketplace</h1>
    <div class="row">
      <% if (items.length === 0) { %>
        <p>No items available in the marketplace. Please check back later.</p>
      <% } else { %>
        <% items.forEach(function(item) { %>
          <div class="col-md-4 mb-3">
            <div class="card">
              <img src="/images/teddies/<%= encodeURIComponent(item.teddy.name.toLowerCase().replace(/\s+/g, '-')) %>.jpg" class="card-img-top" alt="<%= item.teddy.name %>">
              <div class="card-body">
                <h5 class="card-title"><%= item.teddy.name %></h5>
                <p class="card-text">$<%= item.price %></p>
                <form action="/market/buy/<%= item._id %>" method="post">
                  <button type="submit" class="btn btn-primary">Buy</button>
                </form>
              </div>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </main>
  <%- include('partials/_footer.ejs') %>
</body>
</html>