<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
  <body>
<%- include('partials/_header.ejs', { userId: userId }) %>
    <main role="main" class="container mt-4">
      <div class="text-center">
        <h1>the_terrible_teddies</h1>
        <% if (userId) { %>
          <a href="/teddies" class="btn btn-primary mt-3">Create Hand</a>
          <a href="/game/battle-arena" class="btn btn-primary mt-3">Battle Arena</a>
          <a href="/dashboard" class="btn btn-secondary mt-3">Dashboard</a>
          <a href="/auth/logout" class="btn btn-secondary mt-3">Logout</a>
        <% } else { %>
          <a href="/auth/login" class="btn btn-secondary mt-3">Login</a>
          <a href="/auth/register" class="btn btn-secondary mt-3">Register</a>
        <% } %>
        <div class="mt-5">
          <img src="/images/teddy-hero.png" alt="Teddy Hero" class="img-fluid">
        </div>
      </div>
    </main>
  </body>
<%- include('partials/_footer.ejs') %>
  <script src="/js/main.js"></script>
</html>