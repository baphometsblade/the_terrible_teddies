<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_head.ejs') %>
    <title>Terrible Teddies - Your Collection</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick-theme.css"/>
    <style>
      .teddy-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        opacity: 0.3;
      }
      /* Additional styles for UI improvements */
      .container {
        max-width: 1200px;
      }
      .teddy-card {
        cursor: pointer;
        transition: transform 0.3s ease;
      }
      .teddy-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
      }
      .teddy-card.selected {
        border: 2px solid #007bff; /* Highlight selected teddy */
      }
      #lineup-form {
        margin-top: 20px;
        text-align: center;
      }
      .error-message {
        color: red;
        text-align: center;
        margin-top: 10px;
      }
    </style>
  </head>
  <body>
    <img src="/images/teddy-background.jpg" alt="Game Background" class="teddy-background">
    <%- include('partials/_nav.ejs') %>
    <main role="main" class="container">
      <h1>Your Teddies</h1>
      <% if (teddies && teddies.length > 0) { %>
        <div id="teddies-collection" class="carousel">
          <% teddies.forEach(function(teddy) { %>
            <div>
              <div class="card mb-4 shadow-sm teddy-card" data-teddy-id="<%= teddy._id %>">
                <img src="/images/teddies/<%= teddy._id %>.jpg" class="card-img-top" alt="<%= teddy.name %>">
                <div class="card-body">
                  <h5 class="card-title"><%= teddy.name %></h5>
                  <p class="card-text"><%= teddy.description %></p>
                  <ul class="list-unstyled">
                    <li>Attack Damage: <%= teddy.attackDamage %></li>
                    <li>Health: <%= teddy.health %></li>
                    <li>Special Move: <%= teddy.specialMove %></li>
                    <li>Rarity: <%= teddy.rarity %></li>
                  </ul>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary select-teddy">Select</button>
                    </div>
                    <small class="text-muted"><%= teddy.rarity %> Rarity</small>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
        <form id="lineup-form" action="/game/initiate-battle" method="post">
          <input type="hidden" name="selectedTeddyIds" id="selectedTeddyIds" value="">
          <button type="submit" class="btn btn-primary">Initiate Battle</button>
        </form>
        <div id="error-message" class="error-message" style="display: none;"></div>
      <% } else { %>
        <p>No teddies found. Please check back later.</p>
      <% } %>
    </main>
    <%- include('partials/_footer.ejs') %>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/teddiesInteractive.js"></script> <!-- Updated to use the new interactive JS file -->
    <script>
      // Attach event handler to the form submission
      $('#lineup-form').on('submit', function(event) {
        event.preventDefault(); // Prevent the default form submission
        var selectedTeddyIds = $('#selectedTeddyIds').val();
        if (!selectedTeddyIds) {
          $('#error-message').text('Please select at least one teddy to initiate battle.').show();
          return;
        }
        $.ajax({
          url: '/game/initiate-battle',
          type: 'POST',
          contentType: 'application/x-www-form-urlencoded',
          data: { selectedTeddyIds: selectedTeddyIds },
          success: function(response) {
            window.location.href = '/game/battle-arena'; // Redirect to the battle arena on success
          },
          error: function(xhr, status, error) {
            var errorMessage = xhr.responseJSON && xhr.responseJSON.error ? xhr.responseJSON.error : 'An error occurred while initiating the battle. Please try again.';
            $('#error-message').text(errorMessage).show(); // Display the error message
          }
        });
      });
    </script>
  </body>
</html>