<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/_head.ejs') %>
  <title>Battle Arena - Terrible Teddies</title>
  <link rel="stylesheet" href="/css/battleArena.css">
</head>
<body>
  <%- include('partials/_nav.ejs') %>
  <main role="main" class="container">
    <h1>Battle Arena</h1>
    <div id="battle-arena" class="battle-arena">
      <div id="player-hand" class="player-hand">
        <h2>Your Hand</h2>
        <% if (battleState && battleState.playerTeddy) { %>
          <div class="teddy-card">
            <h3><%= battleState.playerTeddy.name %></h3>
            <div class="health-bar">
              <div class="health-bar-filled" style="width: <%= (battleState.playerTeddy.currentHealth / battleState.playerTeddy.health) * 100 %>%;"></div>
            </div>
            <p>Health: <%= battleState.playerTeddy.currentHealth %></p>
            <p>Attack Damage: <%= battleState.playerTeddy.attackDamage %></p>
            <p>Special Move: <%= battleState.playerTeddy.specialMove %></p>
            <img src="/images/teddies/<%= battleState.playerTeddy._id %>.jpg" alt="<%= battleState.playerTeddy.name %>" class="teddy-image">
          </div>
        <% } else { %>
          <p>No teddy selected.</p>
        <% } %>
      </div>
      <div id="battle-field" class="battle-field">
        <h2>Playing Field</h2>
        <% if (battleState) { %>
          <p class="battle-turn">Turn: <%= battleState.turn %></p>
          <% if (battleState.winner) { %>
            <p>Winner: <%= battleState.winner %></p>
          <% } else { %>
            <p>Status: Ongoing</p>
          <% } %>
        <% } %>
      </div>
      <div id="opponent-hand" class="opponent-hand">
        <h2>Opponent's Hand</h2>
        <% if (battleState && battleState.opponentTeddy) { %>
          <div class="teddy-card">
            <h3><%= battleState.opponentTeddy.name %></h3>
            <div class="health-bar">
              <div class="health-bar-filled" style="width: <%= (battleState.opponentTeddy.currentHealth / battleState.opponentTeddy.health) * 100 %>%;"></div>
            </div>
            <p>Health: <%= battleState.opponentTeddy.currentHealth %></p>
            <p>Attack Damage: <%= battleState.opponentTeddy.attackDamage %></p>
            <p>Special Move: <%= battleState.opponentTeddy.specialMove %></p>
            <img src="/images/teddies/<%= battleState.opponentTeddy._id %>.jpg" alt="<%= battleState.opponentTeddy.name %>" class="teddy-image">
          </div>
        <% } else { %>
          <p>No opponent teddy selected.</p>
        <% } %>
      </div>
    </div>
    <div id="battle-controls" class="battle-controls">
      <% if (battleState && battleState.playerTeddy && battleState.opponentTeddy && !battleState.winner) { %>
        <button id="attack-button" class="btn btn-danger">Attack</button>
        <button id="special-move-button" class="btn btn-warning">Special Move</button>
      <% } else if (battleState && battleState.winner) { %>
        <p>Battle Over. Winner: <%= battleState.winner %></p>
        <a href="/teddies" class="btn btn-primary">Return to Teddies</a>
      <% } else { %>
        <p>Select teddies to see battle controls.</p>
      <% } %>
      <!-- Additional battle controls can be added here -->
    </div>
  </main>
  <%- include('partials/_footer.ejs') %>
  <script src="/js/battleArena.js"></script>
  <script src="/js/battleArenaUI.js"></script> <!-- Include the new battle arena UI script -->
</body>
</html>