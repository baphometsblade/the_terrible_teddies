<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/_head.ejs') %>
  <link rel="stylesheet" href="/css/dashboard.css"> <!-- Include custom CSS for the dashboard -->
  <title>Dashboard - The Terrible Teddies</title>
</head>
<body>
  <%- include('partials/_header.ejs', { isAuthenticated: !!sessionUser.userId }) %>

  <div class="container mt-4" style="background-color: #fff8dc; border-radius: 10px; padding: 20px;">
    <h1 style="color: #5f9ea0;">Welcome to your Dashboard<% if (playerDetails && playerDetails.level) { %>, <%= playerDetails.level %> Level Player<% } %>!</h1>
    <p style="color: #483d8b;">Here's your teddy collection and available challenges:</p>
    <% if (playerDetails && playerDetails.unlockedTeddies && playerDetails.challenges) { %>
      <div class="row">
        <div class="col-md-6">
          <h3 style="color: #2e8b57;">Your Teddies:</h3>
          <ul style="list-style-type: none;">
            <% playerDetails.unlockedTeddies.forEach(function(teddy) { %>
              <li style="margin-bottom: 10px; background-color: #f0e68c; padding: 10px; border-radius: 5px;"><%= teddy.name %> - Health: <%= teddy.health %>, Attack: <%= teddy.attackDamage %></li>
            <% }); %>
          </ul>
        </div>
        <div class="col-md-6">
          <h3 style="color: #2e8b57;">Available Challenges:</h3>
          <ul style="list-style-type: none;">
            <% playerDetails.challenges.forEach(function(challenge) { %>
              <li style="margin-bottom: 10px; background-color: #f0e68c; padding: 10px; border-radius: 5px;"><%= challenge.specialMove %> - Unlock at Level: <%= challenge.level %></li>
            <% }); %>
          </ul>
        </div>
      </div>
    <% } else { %>
      <p>You currently have no teddies or challenges. Start by collecting teddies!</p>
    <% } %>
    <div class="row mt-4">
      <div class="col-md-12">
        <h3 style="color: #2e8b57;">Manage Your Teddies' Items:</h3>
        <form action="/auth/items/equip" method="post">
          <label for="teddySelect">Select Teddy:</label>
          <select id="teddySelect" name="teddyId" required>
            <% playerDetails.unlockedTeddies.forEach(function(teddy) { %>
              <option value="<%= teddy._id %>"><%= teddy.name %></option>
            <% }); %>
          </select>
          <label for="itemSelect">Select Item:</label>
          <select id="itemSelect" name="itemId" required>
            <% if (playerDetails.items) { %>
              <% playerDetails.items.forEach(function(item) { %>
                <option value="<%= item._id %>"><%= item.name %></option>
              <% }); %>
            <% } else { %>
              <option>No items available</option>
            <% } %>
          </select>
          <button type="submit" class="btn btn-primary" style="background-color: #6a5acd; border-color: #6a5acd;">Equip Item</button>
        </form>
      </div>
    </div>
    <!-- Feedback Form Section -->
    <div class="feedback-form-section mt-4">
      <h2 style="color: #daa520;">Feedback</h2>
      <p>Your feedback is important to us. Please let us know how we can improve your experience.</p>
      <form action="/auth/feedback/submit" method="POST">
        <div class="form-group">
          <label for="feedbackText">Feedback:</label>
          <textarea id="feedbackText" name="feedbackText" rows="4" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary" style="background-color: #6a5acd; border-color: #6a5acd;">Submit Feedback</button>
      </form>
    </div>
  </div>

  <%- include('partials/_footer.ejs') %>
  <script src="/js/main.js"></script>
  <script src="/js/dashboard.js"></script> <!-- Include custom JavaScript for dynamic dashboard functionalities -->
</body>
</html>