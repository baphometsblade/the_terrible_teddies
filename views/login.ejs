<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<link rel="stylesheet" href="/css/loginStyles.css">
<body>
<%- include('partials/_header.ejs') %>
  <main role="main">
    <div class="container mt-5 login-container">
      <h2 class="login-title">Login</h2>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>
      <form action="/auth/login" method="POST" class="login-form">
        <div class="form-group">
          <label for="username" class="login-label">Username</label>
          <input type="text" id="username" name="username" placeholder="Enter your username" required class="form-control login-input">
        </div>
        <div class="form-group">
          <label for="password" class="login-label">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password" required class="form-control login-input">
        </div>
        <div class="form-group login-actions">
          <button type="submit" class="btn btn-primary login-button">Login</button>
          <p class="register-link">Don't have an account? <a href="/auth/register">Register</a></p>
        </div>
      </form>
      <div class="text-center mt-4 login-image-container">
        <img src="/images/login-teddy.png" alt="Login Teddy" class="img-fluid login-teddy">
      </div>
    </div>
  </main>
<%- include('partials/_footer.ejs') %>
</body>
</html>